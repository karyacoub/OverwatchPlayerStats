<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OverwatchPlayerStats.SearchPage"
             BackgroundColor="#4A4C4E">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
            </Grid>
            <Image Grid.Row="0" Grid.Column="1" Source="logo.png" Aspect="AspectFill" HorizontalOptions="Center" VerticalOptions="Center"></Image>
            <Entry Grid.Row="1" Grid.Column="1" Placeholder="Username#12345" FontFamily="{StaticResource bignoodletoo}" FontSize="Medium" VerticalOptions="Center"/>
            <Button Grid.Row="2" Grid.Column="1" Text="Search" FontFamily="{StaticResource bignoodletoo}" FontSize="Medium" BackgroundColor="#FA9C1D" HorizontalOptions="Center" VerticalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>